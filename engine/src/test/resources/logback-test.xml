<configuration>
    <property
            name="CONSOLE_LOG_PATTERN"
            value="%clr(%d{HH:mm:ss.SSS}){faint} %clr(%5p) %clr(|){faint} %m%n%wEx"/>
    <property name="CONSOLE_LOG_CHARSET" value="UTF-8"/>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <logger name="org.springframework" level="OFF"/>
    <logger name="org.apache" level="OFF"/>
    <logger name="kafka" level="OFF"/>
    <logger name="com.clickhouse" level="ERROR"/>
    <logger name="org.apache.hc" level="ERROR"/>
    <logger name="org.apache.http" level="ERROR"/>
    <logger name="org.mongodb.driver.cluster" level="ERROR"/>
    <logger name="org.mongodb.driver.connection" level="ERROR"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
