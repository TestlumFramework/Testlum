<page xmlns="http://www.knubisoft.com/e2e/testing/model/pages">

    <details>
        <name>Link your card</name>
        <url>https://pme-dev-en.xyz/register/billing</url>
        <description>Page for adding information about your payment card</description>
    </details>

    <locators>
        <locator locatorId="cardNumber">
            <id>register_card-number_input</id>
        </locator>

        <locator locatorId="nameOnCard">
            <id>register_card-name_input</id>
        </locator>

        <locator locatorId="expDateMonth">
            <id>register_card-month_default_input</id>
        </locator>

        <locator locatorId="january">
            <xpath>//*[@id="register_card-month_default_input"]/div[2]/div[1]</xpath>
        </locator>

        <locator locatorId="expDateYear">
            <id>register_card-year_default_input</id>
        </locator>

        <locator locatorId="chooseYear">
            <id>register_card-years_4_input</id>
        </locator>

        <locator locatorId="cvc">
            <id>register_card-cvv_input</id>
        </locator>

        <locator locatorId="confirmButton">
            <id>register_card_button</id>
        </locator>

        <locator locatorId="billingNegativeAssert">
            <id>register_card-number_input</id>
        </locator>

        <locator locatorId="billingPositiveAssert">
            <id>register_profile-photo_input</id>
        </locator>


    </locators>
</page>
