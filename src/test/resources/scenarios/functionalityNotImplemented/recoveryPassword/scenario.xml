<scenario xmlns="http://www.knubisoft.com/e2e/testing/model/scenario" active="false">

    <overview>
        <description>Checking ability recovery password by 'email'</description>
        <name>Password recovery</name>
    </overview>

    <tags>
        <tag>Frontend</tag>
    </tags>

    <click comment="Click on 'Login' button"
           locatorId="recoveryPassword.logIn"/>

    <input comment="Input 'email' valid"
           locatorId="recoveryPassword.inputEmail"
           value="ruskonovalov@icloud.com"/>

    <input comment="Input incorrect 'password'"
           locatorId="recoveryPassword.inputIncorrectPassword"
           value="5555"/>

    <click comment="Click on 'show password' element"
           locatorId="recoveryPassword.show"/>

    <click comment="Click on authorize button"
           locatorId="recoveryPassword.authorize"/>

    <click comment="Click on 'Forgot password' button"
           locatorId="recoveryPassword.forgot"/>

    <input comment="Input 'Email'"
           locatorId="recoveryPassword.enterEmail"
           value="ruskonovalov@icloud.com"/>

    <click comment="Click to sand password button"
           locatorId="recoveryPassword.confirm"/>

    <wait comment="wait 30 second"
          time="30"
          unit="seconds"/>

    <input comment="Input new password"
           locatorId="recoveryPassword.newPassword"
           value="Qwerty1995"/>

    <input comment="Conform password"
           locatorId="recoveryPassword.confirmPassword"
           value="Qwerty1995"/>

    <click comment="Click on 'Restore' button"
           locatorId="recoveryPassword.restore"/>

    <input comment="Input 'email' valid"
           locatorId="recoveryPassword.inputEmail"
           value="ruskonovalov@icloud.com"/>

    <input comment="Input correct 'password'"
           locatorId="recoveryPassword.inputIncorrectPassword"
           value="Qwerty1995"/>

    <click comment="Click on 'show password' element"
           locatorId="recoveryPassword.show"/>

    <click comment="Click on authorize button"
           locatorId="recoveryPassword.authorize"/>

</scenario>