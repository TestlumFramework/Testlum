<x:schema xmlns:x="http://www.w3.org/2001/XMLSchema"
          targetNamespace="http://www.knubisoft.com/cott/testing/model/global-config"
          xmlns:tns="http://www.knubisoft.com/cott/testing/model/global-config"
          elementFormDefault="qualified"
          xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" jaxb:version="2.1">

    <x:include schemaLocation="shared-config.xsd"/>

    <x:complexType name="mobilebrowser">
        <x:complexContent>
            <x:extension base="tns:settings">
                <x:sequence>
                    <x:element name="baseUrl" type="tns:url"/>
                    <x:choice>
                        <x:element name="appiumServer" type="tns:mobilebrowserAppiumServer"/>
                        <x:element name="browserStack" type="tns:mobilebrowserBrowserStack"/>
                    </x:choice>
                </x:sequence>
                <x:attribute name="enabled" type="x:boolean" use="required"/>
            </x:extension>
        </x:complexContent>
    </x:complexType>

    <x:complexType name="mobilebrowserAppiumServer">
        <x:sequence>
            <x:element name="serverUrl" type="tns:url"/>
            <x:element name="devices" type="tns:mobilebrowserDevices"/>
        </x:sequence>
    </x:complexType>

    <x:complexType name="mobilebrowserBrowserStack">
        <x:sequence>
        <x:element name="devices" type="tns:mobilebrowserDevices"/>
        </x:sequence>
    </x:complexType>

    <x:complexType name="mobilebrowserDevices">
        <x:sequence>
            <x:element name="device" type="tns:mobilebrowserDevice" maxOccurs="unbounded"/>
        </x:sequence>
    </x:complexType>

    <x:complexType name="mobilebrowserDevice">
        <x:complexContent>
            <x:extension base="tns:abstractDevice">
                <x:sequence>
                </x:sequence>
                <x:attribute name="platformName" type="tns:platform" use="required"/>
            </x:extension>
        </x:complexContent>
    </x:complexType>

    <x:simpleType name="platform">
        <x:restriction base="x:string">
            <x:enumeration value="ios"/>
            <x:enumeration value="android"/>
        </x:restriction>
    </x:simpleType>
</x:schema>
