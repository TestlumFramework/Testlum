<x:schema xmlns:x="http://www.w3.org/2001/XMLSchema"
          targetNamespace="http://www.knubisoft.com/cott/testing/model/global-config"
          xmlns:tns="http://www.knubisoft.com/cott/testing/model/global-config"
          elementFormDefault="qualified"
          xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" jaxb:version="2.1">

    <x:include schemaLocation="shared-config.xsd"/>

    <x:complexType name="native">
        <x:sequence>
            <x:element name="appiumServerUrl" type="tns:url"/>
            <x:element name="deviceSettings" type="tns:nativeDeviceSettings"/>
        </x:sequence>
        <x:attribute name="enabled" type="x:boolean" use="required"/>
    </x:complexType>

    <x:complexType name="nativeDeviceSettings">
        <x:complexContent>
            <x:extension base="tns:settings">
                <x:sequence>
                    <x:element name="devices" type="tns:nativeDevices"/>
                </x:sequence>
            </x:extension>
        </x:complexContent>
    </x:complexType>

    <x:complexType name="nativeDevices">
        <x:choice maxOccurs="unbounded">
            <x:element name="android" type="tns:androidDevice"/>
            <x:element name="ios" type="tns:iosDevice"/>
        </x:choice>
    </x:complexType>
    
    <x:complexType name="nativeDevice">
        <x:complexContent>
            <x:extension base="tns:abstractDevice"/>
        </x:complexContent>
    </x:complexType>

    <x:complexType name="androidDevice">
        <x:complexContent>
            <x:extension base="tns:nativeDevice">
                <x:sequence>
                    <x:element name="appPackage" type="tns:nonEmptyString"/>
                    <x:element name="appActivity" type="tns:nonEmptyString"/>
                </x:sequence>
            </x:extension>
        </x:complexContent>
    </x:complexType>

    <x:complexType name="iosDevice">
        <x:complexContent>
            <x:extension base="tns:nativeDevice">
                <x:sequence>
                    <x:element name="app" type="tns:nonEmptyString"/>
                </x:sequence>
            </x:extension>
        </x:complexContent>
    </x:complexType>
</x:schema>
